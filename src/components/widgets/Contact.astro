---
import FormContainer from '~/components/ui/Form.astro';
import Headline from '~/components/ui/Headline.astro';
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';
import type { Contact as Props } from '~/types';

const {
  title = await Astro.slots.render('title'),
  subtitle = await Astro.slots.render('subtitle'),
  tagline = await Astro.slots.render('tagline'),
  inputs,
  textarea,
  disclaimer,
  button,
  description,

  id,
  isDark = false,
  classes = {},
  bg = await Astro.slots.render('bg'),
} = Astro.props;
---





<section class="max-w-3xl mx-auto px-4">
  <h2 class="text-3xl font-bold text-center">{title}</h2>
  <p class="text-center mt-2 text-gray-500">{subtitle}</p>

  <form id="contact-form" class="mt-8 space-y-4">
    {inputs.map((input) => (
      <div>
        <label class="block text-sm font-medium mb-1">{input.label}</label>
        <input
          type={input.type}
          name={input.name}
          required
          class="w-full border rounded-md px-3 py-2"
        />
      </div>
    ))}

    <div>
      <label class="block text-sm font-medium mb-1">{textarea.label}</label>
      <textarea
        name={textarea.name}
        required
        rows="5"
        class="w-full border rounded-md px-3 py-2"
      ></textarea>
    </div>

    <p class="text-xs text-gray-500">{disclaimer?.label}</p>

    <button
      type="submit"
      class="w-full bg-primary text-white py-2 rounded-md hover:opacity-90"
    >
      Send Message
    </button>

    <p id="status" class="text-center text-sm mt-3"></p>

    {description && (
      <p class="text-center text-xs text-gray-400 mt-2">{description}</p>
    )}
  </form>
</section>
