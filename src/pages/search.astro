---
import Layout from '~/layouts/PageLayout.astro';
---

<Layout title="Search">
  <!-- Pagefind styles -->
  <link rel="stylesheet" href="/pagefind/pagefind-ui.css" />

  <main class="min-h-[70vh] flex items-start justify-center px-4 pt-20">
    <section class="w-full max-w-2xl bg-white dark:bg-neutral-900 rounded-2xl shadow-lg p-6">
      <h1 class="text-3xl font-bold mb-2 text-neutral-900 dark:text-white">
        Search
      </h1>
      <p class="text-sm text-neutral-500 dark:text-neutral-400 mb-6">
        Search articles, topics, and guides
      </p>

      <!-- Pagefind mount -->
      <div id="search"></div>
    </section>
  </main>

  <!-- Pagefind logic -->
  <script src="/pagefind/pagefind-ui.js"></script>
  <script>
    window.addEventListener("DOMContentLoaded", () => {
      new PagefindUI({
        element: "#search",
        resetStyles: false,
        showImages: false,
        placeholder: "Search health articlesâ€¦",
      });
    });
  </script>

  <!-- Optional modern tweaks -->
  <style>
    /* Smooth results */
    .pagefind-ui__results {
      margin-top: 1rem;
    }

    /* Rounded inputs */
    .pagefind-ui__search-input {
      border-radius: 0.75rem;
      padding: 0.75rem 1rem;
      font-size: 1rem;
    }

    /* Result cards */
    .pagefind-ui__result {
      padding: 0.75rem 0;
      border-bottom: 1px solid rgba(0,0,0,.06);
    }

    .dark .pagefind-ui__result {
      border-color: rgba(255,255,255,.08);
    }
  </style>
</Layout>
