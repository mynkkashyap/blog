---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'HealthBlog — Credible source for all your health related problems.',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Follow',
        href: 'https://instagram.com/mayankk0205',
        target: '_blank',
        icon: 'tabler:download',
      },
      { text: 'Learn more', href: '#features' },
    ]}
    image={{ src: '~/assets/images/hero-image.png', alt: 'AstroWind Hero Image' }}
  >
    <Fragment slot="title">
      Welcome you all in this <span class="hidden xl:inline">amazing project.</span>
      <span class="text-accent dark:text-white"> Health</span>Blog

    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        <span class="font-semibold">Healthblog</span> Medical Professional help just a click away!</span
      >
      <span class="block mb-1 sm:hidden font-bold text-blue-600"></span>
    It is advised to seek help from registered medical practioner, Content here is for educational purpose only.
    </Fragment>
  </Hero>

  <!-- Note Widget ******************* -->

  <Note title="Philosophy:" description="Simplicity, Best Practices and High Performance" />

  <!-- Features Widget *************** -->

  <Features
    id="features"
    tagline="Features"
    title="Features of HealthBlog.in "
    subtitle="One of the most professional and comprehensive health information seeking website."
    items={[
  {
    title: 'What is HealthBlog.in?',
    description:
      'HealthBlog.in is a trusted medical education and health-information platform providing concise, accurate, and clinically relevant content for students, healthcare professionals, and the general public.',
  },
  {
    title: 'Who writes the content on HealthBlog.in?',
    description:
      'Our articles are created and reviewed by medical students, clinicians, and subject-matter experts to ensure clarity, accuracy, and alignment with standard textbooks and updated guidelines.',
  },
  {
    title: 'Is the information on HealthBlog.in reliable?',
    description:
      'Yes. All information is referenced from authentic medical sources such as standard textbooks, journals, guidelines, and evidence-based updates to ensure credible and safe learning.',
  },
  {
    title: 'Can HealthBlog.in be used for exam preparation?',
    description:
      'Absolutely. Our content is structured to support MBBS students, NEET PG aspirants, and other medical learners with clear explanations, tables, mnemonics, and clinically important points.',
  },
  {
    title: 'How often is the website updated?',
    description:
      'HealthBlog.in is regularly updated with new articles, improved explanations, diagrams, and topic revisions based on the latest clinical knowledge and user feedback.',
  },
  {
    title: 'Can I request a topic or suggest improvements?',
    description:
      'Yes! You can request new topics, ask doubts, or share suggestions through our contact page or comment section. We actively welcome community feedback to improve our content.',
  },
]}
  />

  <!-- Content Widget **************** -->

  
  <!-- Content Widget **************** -->

  
  <!-- Content Widget **************** -->

  
  <!-- Steps Widget ****************** -->

  



  <!-- HighlightedPosts Widget ******* -->

  <BlogLatestPosts
    title="Find out more content in our Blog"
    information={`HealthBlog.in is dedicated to sharing reliable, easy-to-understand health and wellness information. Each new article covers an important topic designed to help you make informed choices about your fitness, nutrition, and overall well-being. Thank you for trusting us as your source for health knowledge.
                `}
  />

  <!-- FAQs Widget ******************* -->

  <FAQs
    title="Frequently Asked Questions"
    subtitle="Dive into the following questions to gain insights into the powerful features that HealthBlog offers and how it can improve health."
    tagline="FAQs"
    classes={{ container: 'max-w-6xl' }}
    items={[
      {
        title: 'Why HealthBlog?',
        description:
          "Reputated Authors with credible information.",
      },
      {
        title: 'how to contact?',
        description:
          'You can contact support@healthblog.in',
      },
      {
        title: 'Is there any discrepancy in information?',
        description:
          "Human can make error, You can report any discrepancy at support@healthblog.in",
      },
      {
        title: "Is this can be used for legal purpose?",
        description:
          "No, It can only be used for educational purpose",
      },
      {
        title: 'How often is new content published?',
        description:
          "We publish new articles regularly—typically several times a week—covering trending health topics, tips, and evidence-based wellness insights.",
      },
      {
        title: 'Can I contribute an article to HealthBlog.in?',
        description:
          " Yes! We welcome guest posts from writers, nutritionists, fitness experts, and health enthusiasts. You can contact us through the “Write for Us” or “Contact” page for guidelines.",
      },
    ]}
  />

  <!-- Stats Widget ****************** -->

  

  <!-- CallToAction Widget *********** -->

  
    <Fragment slot="title">
      Health&nbsp;+&nbsp;<br class="block sm:hidden" /><span class="sm:whitespace-nowrap">Blog</span>
    </Fragment>

    <Fragment slot="subtitle">
      Be very surprised by these huge fake numbers you are seeing on this page. <br class="hidden md:inline" />Don't
      waste more time! :P
    </Fragment>
  </CallToAction>
</Layout>
